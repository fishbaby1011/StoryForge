---
const nav = [
  { href: "/", label: "Home" },
  { href: "/novel/", label: "Novel" },
  { href: "/about/", label: "About" },
  { href: "/contact/", label: "Contact" },
];
---

<header class="border-b border-amber-900/10">
  <div class="mx-auto flex w-full max-w-5xl items-center justify-between px-4 py-4 md:px-8">
    <a class="font-ui text-lg font-bold tracking-wide" href="/">Novel Project</a>
    <nav class="hidden gap-5 md:flex">
      {
        nav.map((item) => (
          <a class="font-ui text-sm text-muted transition hover:text-accent" href={item.href}>
            {item.label}
          </a>
        ))
      }
    </nav>
  </div>
</header>
