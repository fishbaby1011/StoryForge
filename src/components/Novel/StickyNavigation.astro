---
interface Props {
  prevHref?: string;
  nextHref?: string;
  tocHref?: string;
}

const { prevHref, nextHref, tocHref = "/novel/" } = Astro.props;
---

<div class="fixed bottom-0 left-0 right-0 z-20 border-t border-amber-900/10 bg-paper/95 p-3 backdrop-blur md:hidden">
  <div class="mx-auto grid max-w-3xl grid-cols-3 gap-2">
    {
      prevHref ? (
        <a class="rounded-lg border border-amber-900/20 px-3 py-2 text-center text-sm" href={prevHref}>
          Prev
        </a>
      ) : (
        <span class="rounded-lg border border-transparent px-3 py-2 text-center text-sm text-muted">Prev</span>
      )
    }
    <a class="rounded-lg border border-amber-900/20 px-3 py-2 text-center text-sm" href={tocHref}>
      Menu
    </a>
    {
      nextHref ? (
        <a class="rounded-lg border border-accent bg-accent px-3 py-2 text-center text-sm text-white" href={nextHref}>
          Next
        </a>
      ) : (
        <span class="rounded-lg border border-transparent px-3 py-2 text-center text-sm text-muted">Next</span>
      )
    }
  </div>
</div>
