---
interface Props {
  slotId?: string;
}

const { slotId = "chapter-bottom" } = Astro.props;
---

<div
  class="mt-10 flex min-h-[280px] items-center justify-center rounded-xl border border-dashed border-amber-900/20 bg-amber-50/40 text-sm text-muted"
  data-slot-id={slotId}
>
  Ad Slot ({slotId})
</div>
