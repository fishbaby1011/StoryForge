---
interface LinkInfo {
  title: string;
  href: string;
}

interface Props {
  prev?: LinkInfo;
  next?: LinkInfo;
}

const { prev, next } = Astro.props;
---

<nav class="mt-12 grid grid-cols-2 gap-4">
  {
    prev ? (
      <a class="rounded-xl border border-amber-900/20 p-4 transition hover:border-accent" href={prev.href}>
        <p class="font-ui text-xs uppercase text-muted">Previous</p>
        <p class="mt-1 font-body text-sm">{prev.title}</p>
      </a>
    ) : (
      <div class="rounded-xl border border-transparent p-4" />
    )
  }
  {
    next ? (
      <a
        class="rounded-xl border border-amber-900/20 p-4 text-right transition hover:border-accent"
        href={next.href}
      >
        <p class="font-ui text-xs uppercase text-muted">Next</p>
        <p class="mt-1 font-body text-sm">{next.title}</p>
      </a>
    ) : (
      <div class="rounded-xl border border-transparent p-4" />
    )
  }
</nav>
