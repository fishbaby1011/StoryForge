---
interface Props {
  href?: string;
  title?: string;
}

const { href, title } = Astro.props;
---

{
  href && (
    <a
      class="mt-10 block w-full rounded-2xl bg-accent px-6 py-5 text-center font-ui text-lg font-semibold text-white shadow-lg shadow-accent/25 transition hover:opacity-90"
      href={href}
    >
      Continue to {title}
    </a>
  )
}
