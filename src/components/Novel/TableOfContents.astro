---
import type { NovelEntry } from "@/lib/novel";
import { toChapterUrl } from "@/lib/novel";

interface Props {
  chapters: NovelEntry[];
}

const { chapters } = Astro.props;
---

<ul class="space-y-2">
  {
    chapters.map((entry) => (
      <li>
        <a
          class="flex items-center justify-between rounded-lg border border-amber-900/10 px-4 py-3 transition hover:border-accent"
          href={toChapterUrl(entry)}
        >
          <span class="font-body">
            V{entry.data.volume} - Ch {String(entry.data.chapter).padStart(2, "0")} {entry.data.title}
          </span>
        </a>
      </li>
    ))
  }
</ul>
