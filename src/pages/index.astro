---
import BaseLayout from "@/layouts/BaseLayout.astro";
import ContinueReading from "@/components/Novel/ContinueReading.astro";
---

<BaseLayout title="Novel Project" description="A mobile-first novel reading site.">
  <section class="space-y-6">
    <p class="font-ui text-xs uppercase tracking-[0.18em] text-muted">Serialized Story</p>
    <h1 class="text-4xl font-semibold leading-tight md:text-5xl">Read the story chapter by chapter.</h1>
    <p class="max-w-2xl text-base leading-8 text-muted">
      Built for immersive reading with persistent progress, chapter navigation, and clean typography.
    </p>
    <div class="flex flex-wrap gap-3">
      <ContinueReading fallbackHref="/novel/volume-1/ch-01/" />
      <a
        class="inline-flex rounded-xl border border-amber-900/20 px-5 py-3 font-ui text-sm font-semibold transition hover:border-accent"
        href="/novel/"
      >
        View Catalog
      </a>
    </div>
  </section>
</BaseLayout>
